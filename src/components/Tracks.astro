<style>
	.section {
		background: rgba(255, 255, 255, 0.02);
	}

	.section-description {
		max-width: 700px;
		margin: 0 auto 4rem;
		font-size: 1.3rem;
		color: rgba(255, 255, 255, 0.8);
	}

	.tracks-grid {
		margin-top: 3rem;
		margin-bottom: 4rem;
	}

	.track-card {
		position: relative;
		overflow: hidden;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.track-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 1.5rem;
	}

	.track-emoji {
		font-size: 3.5rem;
		display: block;
		filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
	}

	.track-badge {
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.8rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.track-badge.popular {
		background: linear-gradient(135deg, #10b981 0%, #059669 100%);
		color: white;
	}

	.track-badge.challenge {
		background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
		color: white;
	}

	.track-badge.ai {
		background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
		color: white;
	}

	.track-badge.social {
		background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
		color: white;
	}

	.track-badge.mystery {
		background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
		color: white;
	}

	.track-badge.innovation {
		background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);
		color: white;
	}

	.track-card h3 {
		color: white;
		margin-bottom: 1rem;
		font-size: 1.4rem;
		font-weight: 700;
	}

	.track-card p {
		color: rgba(255, 255, 255, 0.8);
		font-size: 1rem;
		line-height: 1.6;
		margin-bottom: 1.5rem;
	}

	.track-features {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.feature-tag {
		padding: 0.4rem 0.8rem;
		background: rgba(102, 126, 234, 0.2);
		color: #a5b4fc;
		border-radius: 12px;
		font-size: 0.8rem;
		font-weight: 500;
		border: 1px solid rgba(102, 126, 234, 0.3);
	}

	.track-difficulty {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.difficulty-label {
		font-size: 0.9rem;
		color: rgba(255, 255, 255, 0.7);
		font-weight: 500;
	}

	.difficulty-bars {
		display: flex;
		gap: 0.25rem;
	}

	.bar {
		width: 20px;
		height: 4px;
		background: rgba(255, 255, 255, 0.2);
		border-radius: 2px;
		transition: all 0.3s ease;
	}

	.bar.active {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	}

	.track-card:hover .bar.active {
		box-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
	}

	.tracks-cta {
		text-align: center;
		margin-top: 4rem;
	}

	.cta-content {
		max-width: 600px;
		margin: 0 auto;
		padding: 3rem;
		border-radius: 24px;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.cta-content h3 {
		color: white;
		margin-bottom: 1rem;
		font-size: 1.8rem;
	}

	.cta-content p {
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: 2rem;
		font-size: 1.1rem;
	}

	@media (max-width: 768px) {
		.tracks-grid {
			grid-template-columns: 1fr;
		}

		.track-header {
			align-items: center;
		}

		.track-emoji {
			font-size: 2.5rem;
		}

		.cta-content {
			padding: 2rem;
		}
	}
</style>